{
  "expo": {
    "name": "tripify",
    "slug": "tripify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/tripify-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/tripify-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2EB878"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ybiznaoune.tripify"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "custom photos permission",
          "cameraPermission": "Allow $(PRODUCT_NAME) to open the camera",

          "//": "Disables the microphone permission",
          "microphonePermission": false
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "6f2c11f4-e212-4478-a020-94fd3ec8c65a"
      }
    }
  }
}
